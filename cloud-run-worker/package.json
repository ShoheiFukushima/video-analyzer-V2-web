{
  "name": "video-handoff-worker",
  "version": "1.0.0",
  "description": "Cloud Run worker for Video Handoff - video processing, transcription, and OCR",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "node -e \"const fs=require('fs');const d=new Date();fs.writeFileSync('build-info.json',JSON.stringify({buildTime:d.toISOString(),buildTimeJST:d.toLocaleString('ja-JP',{timeZone:'Asia/Tokyo'}),commit:process.env.COMMIT_SHA||'local'},null,2))\"",
    "build": "./node_modules/.bin/tsc && cp build-info.json dist/",
    "start": "node dist/index.js",
    "local": "npm run build && npm start",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "@google/generative-ai": "^0.24.1",
    "@libsql/client": "^0.17.0",
    "@smithy/node-http-handler": "^3.0.0",
    "@supabase/supabase-js": "^2.38.0",
    "@vercel/blob": "^2.0.0",
    "avr-vad": "^1.0.9",
    "axios": "^1.7.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "openai": "^4.25.0",
    "p-limit": "^7.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
